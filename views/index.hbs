<div class="container container-width mt-3">
    {{#if noCountry}}
        <h2>News Search</h2>
    {{else}}
       <h2>News Search {{location}}</h2>
    {{/if}}
    
        <form method="GET" action="/search">

            <div class="form-group">
                <input type="text" class="form-control" name="search_term" id="search-term" placeholder="Please enter a search term">
            </div>

            {{#if noCountry}}
            <div class="form-check form-check-inline d-flex justify-content-between">
                <div>
                    <input class="form-check-input ml-2 mr-2" type="radio" name="country" id="us" value="us">
                    <label class="form-check-label"for="us"><img src="flags/us.png" alt=""></label>
                </div>
                
                <div>
                    <input class="form-check-input ml-2 mr-2" type="radio" name="country" id="uk" value="uk">
                    <label class="form-check-label"for="uk"><img src="flags/uk.png" alt=""></label>
                </div>
                <div>
                    <input class="form-check-input ml-2 mr-2" type="radio" name="country" id="fr" value="fr">
                    <label class="form-check-label"for="fr"><img src="flags/fr.png" alt=""></label>
                </div>
                
            </div>
            <br>
            <div class="form-check form-check-inline d-flex justify-content-between">
                <div>
                    <input class="form-check-input ml-2 mr-2" type="radio" name="country" id="sg" value="sg">
                    <label class="form-check-label"for="sg"><img src="flags/sg.png" alt=""></label>
                </div>
                <div>
                    <input class="form-check-input ml-2 mr-2" type="radio" name="country" id="jp" value="jp">
                    <label class="form-check-label"for="jp"><img src="flags/jp.png" alt=""></label>
                </div>
                <div>
                    <input class="form-check-input ml-2 mr-2" type="radio" name="country" id="cn" value="cn">
                    <label class="form-check-label"for="cn"><img src="flags/cn.png" alt=""></label>
                </div>               
            </div>
            {{/if}}

            <div class="form-group">
                <select class="form-control" name="category" id="category">
                    <option value="business">Business</option>
                    <option value="entertainment">Entertainment</option>
                    <option value="general">General</option>
                    <option value="health">Health</option>
                    <option value="science">Science</option>
                    <option value="sports">Sports</option>
                    <option value="technology">Technology</option>
                </select>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-block">Search</button>
</div>
